function pack_initramfs(){
	echo "PACKING INITRAMFS ...."
	cd rootfs/
	find . | cpio -o -H newc | gzip -9 > ../drive/initramfs.img
	cd "$SCRIPT_FOLDER"
	echo "PACKING INITRAMFS DONE"
}

function pack_drive(){
	echo "PACKING DRIVE ...."

	# Create drive.img.tmp who contain FAT32 partition
	dd if=/dev/zero bs=512 count=129024 of=drive.img.tmp
	mkfs.vfat -F 32 -n "INEPLEM" drive.img.tmp
	mcopy -si drive.img.tmp drive/* ::.

	# Add MBR before drive.img.tmp
	(dd if=/dev/zero bs=512 count=2048 ; cat drive.img.tmp) > drive.img
	echo "label: dos" | sfdisk drive.img
	echo ",,c;" | sfdisk drive.img

	rm drive.img.tmp
	echo "PACKING DRIVE DONE"
}
